<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    app:cardCornerRadius="10dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/border"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/console_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nintendo Switch"
            android:layout_marginTop="15dp"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            />

        <ImageView
            android:id="@+id/console_image"
            android:layout_width="200dp"
            android:layout_height="180dp"

            android:layout_marginLeft="10dp"
            android:layout_below="@+id/console_name"
            android:layout_marginTop="1dp"
            android:src="@drawable/nintendo" />

        <TextView
            android:id="@+id/data_lancamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data de lanÃ§amento:"
            android:layout_below="@+id/console_name"
            android:layout_toRightOf="@id/console_image"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="center"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="3/3/2017"
            android:layout_below="@id/data_lancamento"
            android:id="@+id/console_date"
            android:textAlignment="center"
            android:layout_toRightOf="@id/console_image"
            />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Fabricante:"
             android:layout_below="@id/console_date"
             android:layout_toRightOf="@id/console_image"
             android:textAlignment="center"
             android:textAppearance="@style/TextAppearance.AppCompat.Medium"
             android:textStyle="bold"
             android:layout_marginTop="5dp"
             android:id="@+id/console_fabricante"
             />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nintendo"
            android:textSize="20sp"
            android:layout_below="@id/console_fabricante"
            android:layout_toRightOf="@id/console_image"
            android:textAlignment="center"
            android:layout_marginTop="3dp"
            android:id="@+id/console_maker"

            />
        
    </RelativeLayout>

</androidx.cardview.widget.CardView>